<h1>Eat-Da-Burger!</h1>

<div class="burger-div">
  <div class="not-devoured-burgers">
    <h3>Burgers to devour</h3>
    <ul>
      {{#each this.notDevoured}}
      <li>{{burger_name}} <button id="devour-burger" data-id="{{id}}">Devour it</button></li>
      {{/each}}
    </ul>
  </div>

  <div class="devoured-burgers">
    <h3>Devoured Burgers</h3>
    <ul>
      {{#each this.devoured}}
      <li>{{burger_name}}</li>
      {{/each}}
    </ul>
  </div>
</div>

<form class="create-form">
  <div class="form-group">
    <label for="burger">Enter a burger you want to eat and Click the "Submit" button</label>
    <input type="text" id="burger-name" name="burger">
  </div>



  <button id="burgerButton" type="submit">Submit</button>
  <p></p>
</form>